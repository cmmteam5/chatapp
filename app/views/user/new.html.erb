<h1><%= t('sign_up') %></h1>
<div class="newform">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: {action: "create"} do |f| %>     
      <%= f.label :"#{t('name')}" %>
      <%= f.text_field :name, name:"name", class: 'form-control' %>

      <%= f.label :"#{t('email')}" %>
      <%= f.email_field :email, name:"email", class: 'form-control' %>

      <%= f.label :"#{t('password')}" %>
      <%= f.password_field :password, name:"password",class: 'form-control' %>

      <% if @user.errors.any? %>
        <div id="errorExplanation">
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <br>
      <div class="button">
        <%= f.submit "#{t('create_my_account')}",  class: "btn btn-primary" %>
        <%= link_to "#{t('cancel')}", root_path, class:"btn btn-primary margin-left" %> 
      </div>
    <% end %>
  </div>
</div>
